<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #999999;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lanhousefx.EditarJogoController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../../img/optimus-prime-worst-things.png" />
         </image>
         <effect>
            <GaussianBlur />
         </effect>
      </ImageView>
      <ImageView fx:id="capa" fitHeight="266.0" fitWidth="207.0" layoutX="293.0" layoutY="13.0" onMouseClicked="#onImagemClicked" pickOnBounds="true" preserveRatio="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <TextField fx:id="nome" focusTraversable="false" layoutX="14.0" layoutY="75.0" prefHeight="25.0" prefWidth="207.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <TextField fx:id="desenvolvedora" focusTraversable="false" layoutX="280.0" layoutY="361.0" prefHeight="25.0" prefWidth="197.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <ComboBox fx:id="consoles" focusTraversable="false" layoutX="60.0" layoutY="167.0" onAction="#onComboAction" prefWidth="150.0" />
      <Button focusTraversable="false" layoutX="164.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#onAdicionarClicked" style="-fx-background-color: #5882FA;" text="Adicionar" textFill="WHITESMOKE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button focusTraversable="false" layoutX="43.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#onRemoverClicked" style="-fx-background-color: #5882FA;" text="Remover" textFill="WHITESMOKE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button focusTraversable="false" layoutX="507.0" layoutY="119.0" mnemonicParsing="false" onMouseClicked="#onSalvarImagemClicked" style="-fx-background-color: #5882FA;" text="Alterar" textFill="WHITESMOKE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <TableView fx:id="generosAtual" focusTraversable="false" layoutX="22.0" layoutY="218.0" prefHeight="134.0" prefWidth="106.0" />
      <TableView fx:id="generosBanco" focusTraversable="false" layoutX="144.0" layoutY="218.0" prefHeight="134.0" prefWidth="106.0" />
      <Button focusTraversable="false" layoutX="89.0" layoutY="29.0" mnemonicParsing="false" onMouseClicked="#onSalvarNomeClicked" style="-fx-background-color: #5882FA;" text="Alterar" textFill="WHITESMOKE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button focusTraversable="false" layoutX="340.0" layoutY="313.0" mnemonicParsing="false" onMouseClicked="#onSalvarDevClicked" style="-fx-background-color: #5882FA;" text="Alterar" textFill="WHITESMOKE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ImageView fitHeight="71.0" fitWidth="75.0" layoutX="515.0" layoutY="313.0" onMouseClicked="#onSairClicked" preserveRatio="true">
         <image>
            <Image url="@../../../img/voltar.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
